<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toName="clr-namespace:OrderManagement.WpfClient.Converters.ToName"
             x:Class="View.OrderListView"
             mc:Ignorable="d"
             d:DesignHeight="768"
             d:DesignWidth="1024">
    <UserControl.Resources>
        <toName:CustomerCodeToNameConverter x:Key="CustomerCodeToNameConverter" />
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Path="OrderListViewModel"
                 Source="{StaticResource Locator}" />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="SearchConditionGrid"
              DataContext="{Binding SearchCondition}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <WrapPanel Grid.Column="0"
                       Grid.Row="0">
                <Label Content="订单日期:"
                       HorizontalAlignment="Left"
                       Margin="3"
                       VerticalAlignment="Center" />
                <DatePicker x:Name="OrderDateFromDatePicker"
                            HorizontalAlignment="Left"
                            Margin="3"
                            SelectedDate="{Binding OrderDateFrom, Mode=TwoWay}"
                            VerticalAlignment="Center" />
                <DatePicker x:Name="OrderDateToDatePicker"
                            HorizontalAlignment="Left"
                            Margin="3"
                            SelectedDate="{Binding OrderDateTo, Mode=TwoWay}"
                            VerticalAlignment="Center" />
            </WrapPanel>
            <WrapPanel Grid.Column="1"
                       Grid.Row="0">
                <Label Content="客户姓名:"
                       HorizontalAlignment="Left"
                       Margin="3"
                       VerticalAlignment="Center" />
                <ComboBox x:Name="CustomerCode2ComboBox"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Value"
                          HorizontalAlignment="Left"
                          Width="120"
                          VerticalAlignment="Center"
                          SelectedValue="{Binding CustomerId}"
                          IsSynchronizedWithCurrentItem="True"
                          ItemsSource="{Binding OrderListViewModel.CustomerList, Source={StaticResource Locator}}" />
            </WrapPanel>
            <Button x:Name="SearchButton"
                    Content="查询"
                    Grid.Column="3"
                    HorizontalAlignment="Right"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    Width="75"
                    Command="{Binding OrderListViewModel.SearchOrderCommand}"
                    DataContext="{Binding Source={StaticResource Locator}}" />
        </Grid>
        <Grid x:Name="CustomerInfoGrid"
              DataContext="{Binding SelectedOrder}"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="客户编号:"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Margin="3"
                   Grid.Row="0"
                   VerticalAlignment="Center" />
            <TextBlock x:Name="CustomerIdTextBlock"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       Margin="3"
                       Grid.Row="0"
                       Text="{Binding CustomerClient.CustomerId}"
                       VerticalAlignment="Center" />
            <Label Content="客户姓名:"
                   Grid.Column="2"
                   HorizontalAlignment="Left"
                   Margin="3"
                   Grid.Row="0"
                   VerticalAlignment="Center" />
            <TextBlock x:Name="NameTextBlock"
                       Grid.Column="3"
                       HorizontalAlignment="Left"
                       Margin="3"
                       Grid.Row="0"
                       Text="{Binding CustomerClient.Name}"
                       VerticalAlignment="Center" />
            <Label Content="收货地址:"
                   Grid.Column="4"
                   HorizontalAlignment="Left"
                   Margin="3"
                   Grid.Row="0"
                   VerticalAlignment="Center" />
            <TextBlock x:Name="AddressTextBlock"
                       Grid.Column="5"
                       HorizontalAlignment="Left"
                       Margin="3"
                       Grid.Row="0"
                       Text="{Binding CustomerClient.Address}"
                       VerticalAlignment="Center" />
            <Label Content="电话号码:"
                   Grid.Column="6"
                   HorizontalAlignment="Left"
                   Margin="3"
                   Grid.Row="0"
                   VerticalAlignment="Center" />
            <TextBlock x:Name="PhoneTextBlock"
                       Grid.Column="7"
                       HorizontalAlignment="Left"
                       Margin="3"
                       Grid.Row="0"
                       Text="{Binding CustomerClient.Phone}"
                       VerticalAlignment="Center" />
            <Label Content="邮编:"
                   Grid.Column="8"
                   HorizontalAlignment="Left"
                   Margin="3"
                   Grid.Row="0"
                   VerticalAlignment="Center" />
            <TextBlock x:Name="PostCodeTextBlock"
                       Grid.Column="9"
                       HorizontalAlignment="Left"
                       Margin="3"
                       Grid.Row="0"
                       Text="{Binding CustomerClient.PostCode}"
                       VerticalAlignment="Center" />
        </Grid>
        <Expander Header="订单清单"
                  Grid.Row="2"
                  IsExpanded="True">
            <Grid Margin="0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="OrderClientDataGrid"
                          AutoGenerateColumns="False"
                          EnableRowVirtualization="True"
                          ItemsSource="{Binding Orders}"
                          SelectedItem="{Binding SelectedOrder}"
                          RowDetailsVisibilityMode="VisibleWhenSelected"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn x:Name="OrderIdDataGridColumn"
                                            Binding="{Binding OrderId}"
                                            Header="订单号码"
                                            Width="Auto" />
                        <DataGridTemplateColumn x:Name="OrderDateColumn"
                                                Header="订单日期"
                                                Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DatePicker SelectedDate="{Binding OrderDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn x:Name="OrderTypeColumn"
                                            Binding="{Binding OrderType}"
                                            Header="种类"
                                            Width="Auto" />
                        <DataGridTextColumn x:Name="CustomerNameColumn"
                                            Binding="{Binding CustomerClient.CustomerId, Converter={StaticResource CustomerCodeToNameConverter}}"
                                            Header="客户名称"
                                            Width="Auto" />
                        <DataGridTemplateColumn x:Name="ShipDateColumn"
                                                Header="发货日期"
                                                Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DatePicker SelectedDate="{Binding ShipDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn x:Name="InvoiceNoColumn"
                                            Binding="{Binding InvoiceNo}"
                                            Header="邮单编号"
                                            Width="Auto" />
                    </DataGrid.Columns>
                </DataGrid>
                <Grid x:Name="OrderClientDataDetailGrid"
                      Grid.Column="1"
                      DataContext="{Binding SelectedOrder}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Content="订单号码:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Margin="3"
                           Grid.Row="0"
                           VerticalAlignment="Center" />
                    <TextBox x:Name="OrderIdTextBox"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="3"
                             Grid.Row="0"
                             Text="{Binding OrderId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                             VerticalAlignment="Center"
                             Width="120"
                             IsReadOnly="True" />
                    <Label Content="种类:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Margin="3"
                           Grid.Row="1"
                           VerticalAlignment="Center" />
                    <TextBox x:Name="OrderTypeTextBox"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="3"
                             Grid.Row="1"
                             Text="{Binding OrderType, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                             VerticalAlignment="Center"
                             Width="120" />
                    <Label Content="订单日期:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Margin="3"
                           Grid.Row="2"
                           VerticalAlignment="Center" />
                    <DatePicker x:Name="OrderDateDatePicker"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Margin="3"
                                Grid.Row="2"
                                SelectedDate="{Binding OrderDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                                VerticalAlignment="Center" />
                    <Label Content="客户名称:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Margin="3"
                           Grid.Row="3"
                           VerticalAlignment="Center" />
                    <ComboBox x:Name="CustomerCodeComboBox"
                              DisplayMemberPath="DisplayName"
                              SelectedValuePath="Value"
                              HorizontalAlignment="Left"
                              Grid.Row="3"
                              Grid.Column="1"
                              Width="120"
                              VerticalAlignment="Center"
                              SelectedValue="{Binding CustomerClient.CustomerId}"
                              ItemsSource="{Binding OrderListViewModel.CustomerList, Source={StaticResource Locator}}" />
                    <Label Content="发货日期:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Margin="3"
                           Grid.Row="4"
                           VerticalAlignment="Center" />
                    <DatePicker x:Name="ShipDateDatePicker"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Margin="3"
                                Grid.Row="4"
                                SelectedDate="{Binding ShipDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                                VerticalAlignment="Center" />
                    <Label Content="邮单编号:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Margin="3"
                           Grid.Row="5"
                           VerticalAlignment="Center" />
                    <TextBox x:Name="InvoiceNoTextBox"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="3"
                             Grid.Row="5"
                             Text="{Binding InvoiceNo, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                             VerticalAlignment="Center"
                             Width="120" />
                    <Label Content="运费:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Margin="3"
                           Grid.Row="6"
                           VerticalAlignment="Center" />
                    <TextBox x:Name="FreightTextBox"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="3"
                             Grid.Row="6"
                             Text="{Binding Freight, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                             VerticalAlignment="Center"
                             Width="120" />
                </Grid>
            </Grid>
        </Expander>
        <Expander Header="订单明细"
                  Grid.Row="3"
                  IsExpanded="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="OrderDetailClientsDataGrid"
                          AutoGenerateColumns="False"
                          EnableRowVirtualization="True"
                          Margin="0 10"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          ItemsSource="{Binding SelectedOrder.OrderDetailClients, Mode=TwoWay}"
                          RowDetailsVisibilityMode="VisibleWhenSelected">
                    <DataGrid.Columns>
                        <DataGridTextColumn x:Name="ProductIdColumn"
                                            Binding="{Binding ProductId}"
                                            Header="产品编号"
                                            Width="Auto"
                                            ClipboardContentBinding="{Binding ProductId}"/>
                        <DataGridTextColumn x:Name="ProductNameColumn"
                                            Binding="{Binding ProductClient.ProductName}"
                                            Header="产品名称"
                                            Width="Auto" />
                        <DataGridTextColumn x:Name="PurchasePriceColumn"
                                            Binding="{Binding PurchasePrice}"
                                            Header="采购价格"
                                            Width="Auto" />
                        <DataGridTextColumn x:Name="QuantityColumn"
                                            Binding="{Binding Quantity}"
                                            Header="数量"
                                            Width="Auto" />
                        <DataGridTextColumn x:Name="SoldPriceColumn"
                                            Binding="{Binding SoldPrice}"
                                            Header="售出价格"
                                            Width="Auto" />
                        <DataGridTextColumn x:Name="LinkColumn"
                                            Binding="{Binding Link}"
                                            Header="采购链接"
                                            Width="Auto" />
                    </DataGrid.Columns>
                </DataGrid>
                <Grid x:Name="OrderDetailClientsDetailGrid"
                      Grid.Column="1"
                      DataContext="{Binding SelectedValue, ElementName=OrderDetailClientsDataGrid}"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Content="订单明细编号:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Margin="3,3,0,3"
                           VerticalAlignment="Center" />
                    <TextBox x:Name="OrderDetailIdTextBox"
                             Grid.Column="1"
                             Grid.Row="0"
                             HorizontalAlignment="Left"
                             Height="24"
                             Text="{Binding OrderDetailId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                             VerticalAlignment="Center"
                             Width="120" 
                             IsReadOnly="True"/>
                    <Label Content="产品编号:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Grid.Row="1"
                           VerticalAlignment="Center" />
                    <TextBox x:Name="ProductIdTextBox"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             Height="24"
                             Grid.Row="1"
                             Text="{Binding ProductId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                             VerticalAlignment="Center"
                             Width="120" />
                    <Label Content="采购价格:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Grid.Row="2"
                           VerticalAlignment="Center" />
                    <TextBox x:Name="PurchasePriceTextBox"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             Height="24"
                             Grid.Row="2"
                             Text="{Binding PurchasePrice, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                             VerticalAlignment="Center"
                             Width="120" />
                    <Label Content="数量:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Grid.Row="3"
                           VerticalAlignment="Center" />
                    <TextBox x:Name="QuantityTextBox"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             Height="24"
                             Grid.Row="3"
                             Text="{Binding Quantity, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                             VerticalAlignment="Center"
                             Width="120" />
                    <Label Content="售出价格:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Grid.Row="4"
                           VerticalAlignment="Center" />
                    <TextBox x:Name="SoldPriceTextBox"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             Height="24"
                             Grid.Row="4"
                             Text="{Binding SoldPrice, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                             VerticalAlignment="Center"
                             Width="120" />
                    <Label Content="采购链接:"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           Grid.Row="5"
                           VerticalAlignment="Center" />
                    <TextBox x:Name="LinkTextBox"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             Height="24"
                             Grid.Row="5"
                             Text="{Binding Link, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                             VerticalAlignment="Center"
                             Width="120" />
                </Grid>
            </Grid>
        </Expander>
        <Grid Grid.Row="4"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="BtnCreateOrder"
                    Content="添加订单"
                    HorizontalAlignment="Right"
                    Width="75"
                    Grid.Column="0"
                    Command="{Binding NavigateToDetailCommand}" />
            <Button x:Name="BtnUpdateOrder"
                    Content="更新订单"
                    HorizontalAlignment="Right"
                    Width="75"
                    Grid.Column="1"
                    Command="{Binding LoadOrderCommand}" />
            <Button x:Name="BtnDeleteOrder"
                    Content="删除订单"
                    HorizontalAlignment="Right"
                    Width="75"
                    Grid.Column="2"
                    Command="{Binding LoadOrderCommand}" />
            <Button x:Name="BtnLoad"
                    Content="读取"
                    HorizontalAlignment="Right"
                    Width="75"
                    Grid.Column="4"
                    Command="{Binding LoadOrderCommand}" />
            <Button x:Name="BtnSave"
                    Content="保存"
                    HorizontalAlignment="Right"
                    Width="75"
                    Grid.Column="5"
                    Command="{Binding SaveOrderAndDetailCommand}" />
            <Button x:Name="BtnExit"
                    Content="退出"
                    HorizontalAlignment="Right"
                    Width="75"
                    Grid.Column="6"
                    Command="{Binding ExitSystemCommand}" />
        </Grid>

    </Grid>
</UserControl>